<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="30dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Balance:$50,00"
        android:fontFamily="@font/baloo"
        android:textColor="@color/sandBrown"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/vote_bg"
        android:layout_margin="10dp"
        android:backgroundTint="@color/LightsandyBrown"
        android:id="@+id/watch_ad"
        app:elevation="0dp"
        android:padding="10dp"
        android:clickable="true"
        app:backgroundTint="@color/grey"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_movie"
            android:tint="@color/sandyBrown"
            android:layout_marginStart="5dp"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Watch Ad for vote "
            android:textSize="18dp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/baloo"
            android:textColor="@color/sandyBrown"
            android:layout_gravity="center"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" OR "
        android:textSize="18dp"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/baloo"
        android:layout_gravity="center"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        app:endIconDrawable="@drawable/ic_all"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="How many Vote ?"/>

    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note: 1 vote = $50"
        android:fontFamily="@font/baloo"
        android:textColor="@color/sandBrown"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:text="Vote"
        app:icon="@drawable/ic_vote"
        app:iconGravity="textStart"/>
</LinearLayout>