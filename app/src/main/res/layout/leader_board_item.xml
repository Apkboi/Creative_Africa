<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    android:backgroundTint="@color/snowWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:weightSum="3">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:text="1"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="18dp"
            android:id="@+id/txt_position"
            android:layout_marginLeft="10dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:id="@+id/img_user"
            android:src="@drawable/photographm"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ebube Roderick Roderick"
            android:maxLength="13"
            android:ellipsize="end"
            android:textColor="@color/materialblack"
            android:id="@+id/userName"
            android:textSize="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500 vts"
                android:id="@+id/userVotes"
                android:fontFamily="@font/baloo"/>
        </LinearLayout>




        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="@drawable/vote_bg"
            android:backgroundTint="@color/LightsandyBrown"
            app:icon="@drawable/ic_vote"
            android:text="Vote"
            android:id="@+id/btn_vote"
            app:elevation="0dp"
            android:padding="10dp"
            app:backgroundTint="@color/grey"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_vote"
                android:tint="@color/sandyBrown"
                android:layout_marginStart="5dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vote"
                android:textSize="18dp"
                android:layout_marginStart="5dp"
                android:textColor="@color/sandyBrown"
                android:layout_gravity="center"/>
        </LinearLayout>

       

    </LinearLayout>


</com.google.android.material.card.MaterialCardView>